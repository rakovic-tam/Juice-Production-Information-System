@model IEnumerable<ISBahus.Models.ZahtevOStanjuRepromaterijala>

@{
    ViewBag.Title = "Zahtev o stanju repromaterijala";
}

<div class="create-strane">
    <h2>Glavni meni - Zahtev o stanju repromaterijala</h2>
    <p>
        @Html.ActionLink("Kreiraj novi zahtev", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                Tekst zahteva
            </th>
            <th>
                Šifra naloga
            </th>
            <th>
                Izdaje
            </th>
            <th>
                Prima
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TekstZahteva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NalogZaProizvodnju.SifraNaloga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Radnik.PunoIme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Radnik1.PunoIme)
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "Edit", new { id = item.SifraZahteva }) |
                    @Html.ActionLink("Prikaži detalje", "Details", new { id = item.SifraZahteva }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.SifraZahteva })
                </td>
            </tr>
        }

    </table>
</div>
