@model ISBahus.Models.ZahtevOStanjuRepromaterijala

@{
    ViewBag.Title = "Kreiranje zahteva";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
<div class="form-horizontal create-strane">
    <h2>Kreiraj novi zahtev</h2>
    <h4>Zahtev o stanju repromaterijala</h4>
    <hr style="border-top: 1px solid #fff;" />


    <div class="form-group">
        @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TekstZahteva, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TekstZahteva, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TekstZahteva, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Izdaje, "Izdaje", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Izdaje", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Izdaje, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Prima, "Prima", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Prima", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Prima, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SifraNalogaZaProizvodnju, "Šifra naloga za proizvodnju", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SifraNalogaZaProizvodnju", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SifraNalogaZaProizvodnju, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kreiraj" class="btn btn-default" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Vrati se na prethodnu stranu", "Index")
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
